# Port configuration
PORT=8000

# PostgreSQL Database Configuration
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=chatbot
POSTGRES_PASSWORD=chatbot
POSTGRES_DB=chatbot

# Alternative: Use DATABASE_URL instead of individual POSTGRES_* variables
DATABASE_URL=postgresql+psycopg://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}


## models
# anthropic | google (Gemini) | openrouter
LLM_PROVIDER=anthropic

## if 0 to avoid rate limits take random from cv_generation/assets/headshots
GENERATE_IMAGES=0

REQUEST_MIN_INTERVAL_S=12

OPENROUTER_API_KEY=
GEMINI_API_KEY=

GEMINI_TEXT_MODEL=models/gemini-2.0-flash
GEMINI_IMAGE_MODEL=models/gemini-2.5-flash-image

OPENROUTER_TEXT_MODEL=mistralai/mistral-small-3.1-24b-instruct:free
OPENROUTER_IMAGE_MODEL=black-forest-labs/flux.1-schnell


ANTHROPIC_API_KEY=

ANTHROPIC_TEXT_MODEL=claude-3-haiku-20240307

GENERATION_PIPELINE_VERSION=1.0.0


## RAG
# Local embedding model (SentenceTransformer, no API key needed)
EMBEDDING_MODEL=intfloat/multilingual-e5-small
